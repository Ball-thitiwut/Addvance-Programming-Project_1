<AnchorPane prefHeight="350.0" prefWidth="700.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se233.javaproject.view.MainView">
   <children>
      <AnchorPane fx:id="DropPane" layoutX="96.0" layoutY="37.0" onDragDropped="#HandleDrop" onDragOver="#HandleDragOver" prefHeight="200.0" prefWidth="500.0" style="-fx-border-color: black;">
