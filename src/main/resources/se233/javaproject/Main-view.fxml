      <Button fx:id="Resize" layoutX="395.0" layoutY="268.0" mnemonicParsing="false" onAction="#switchSceneToResize" prefHeight="41.0" prefWidth="128.0" style="-fx-background-color: Red;" text="Re-Size" textFill="WHITE">
         <font>
            <Font name="Angsana New" size="24.0" />
         </font>
      </Button>
      <!--Button switch to water mask scene-->
      <Button fx:id="Watermask" layoutX="156.0" layoutY="268.0" mnemonicParsing="false" onAction="#switchSceneToWaterMask" prefHeight="41.0" prefWidth="128.0" style="-fx-background-color: Red;" text="Watermask" textFill="WHITE">
         <font>
            <Font name="Angsana New" size="24.0" />
         </font>
      </Button>
   </children>
